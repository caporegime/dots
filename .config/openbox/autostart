# compton
compton -r 12 -o 0.5 -c -C -l -18 -t -10 -z -D 8 -I 0.05 -O 0.07 -f -G --refresh-rate 60 &

# tray
stalonetray &

# set the gamma
xgamma -gamma 0.85 &

# fonts
bash ~/.scripts/fonts.sh &

# bar
polybar barito -c .config/polybar/polybox &

# touchpad tap
sh ~/.scripts/touchpad.sh &

# volume Icon
volumeicon &

# network Manager
nm-applet &

# beep
xset -b &

# urxvt daemon
urxvtd &

# quicktile daemon
quicktile --daemonize &

# set the background
./.fehbg &

# megasync
megasync &

# numlock
numlockx on &
